<div class="singleBeer">
    <a href="/beer/{{this.id}}">
        <li>
            <div>
                <img src="{{this.image_url}}" alt="">
            </div>
            <div>
                <p>
                    <b>{{this.name}}</b>
                </p>
                <p class="tagLine">
                    {{this.tagline}}
                </p>
                <p>
                    {{this.description}}
                </p>

            </div>

        </li>
    </a>
</div>